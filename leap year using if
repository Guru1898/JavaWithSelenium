import java.util.*;
import java.lang.*;
import java.io.*;



public class Main
{
	public static void main (String[] args) throws java.lang.Exception
	{
    Scanner l = new Scanner(System.in);
    int a = l.nextInt();
    if(a%400==0)
    {
            System.out.println("1");
    }
    else if(a%100==0)
    {
      System.out.println("0");
    }
    else if(a%4==0)
    {
      System.out.println("1");
    }
    else
    {
      System.out.println("0");
    }
  }
}
